<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="124dp"
    android:layout_marginEnd="16dp"

    android:background="@drawable/wallet_item_background"
    android:id="@+id/root"
    android:layout_marginTop="12dp"
    android:layout_marginStart="16dp">


    <com.joooonho.SelectableRoundedImageView

        android:id="@+id/iv_image_event"
        android:src="@drawable/pictur"
        android:layout_width="110dp"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"

        app:sriv_left_top_corner_radius="13dip"
        app:sriv_right_top_corner_radius="0dip"
        app:sriv_left_bottom_corner_radius="13dip"
        app:sriv_right_bottom_corner_radius="0dip"


        />



    <ImageView
        android:layout_width="wrap_content"
        android:src="@drawable/ic_small_caledar"
        android:layout_toRightOf="@+id/iv_image_event"
        android:layout_below="@+id/ivent_name"
        android:layout_marginTop="7dp"
        android:layout_marginStart="11dp"
        android:id="@+id/iv_calendar"
        android:layout_height="wrap_content">

    </ImageView>

    <ImageView
        android:layout_width="wrap_content"
        android:src="@drawable/ic_small_location"
        android:layout_toRightOf="@+id/iv_image_event"
        android:layout_below="@+id/iv_calendar"
        android:layout_marginStart="10dp"
        android:layout_marginTop="7dp"

        android:id="@+id/iv_small_location"
        android:layout_height="wrap_content">

    </ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_height="wrap_content"
        android:text="Super Music Festival"
        android:fontFamily="@font/sf_medium"
        android:layout_toRightOf="@+id/iv_image_event"
        android:textColor="@color/black"
        android:layout_marginTop="16dp"
        android:layout_marginStart="11dp"
        android:id="@+id/ivent_name"
        android:textSize="16sp"
  />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="Aug 28 - Sep 22, 202"
        android:fontFamily="sans-serif"

        android:id="@+id/tv_date"
        android:layout_marginTop="3dp"
        android:textSize="10sp"
        android:layout_toRightOf="@+id/iv_calendar"
        android:textColor="#2f73f7"
        android:layout_below="@+id/ivent_name"

        android:layout_marginStart="14dp"
/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="Amsterdam, Netherlands"
        android:fontFamily="sans-serif"

        android:id="@+id/tv_location"
        android:layout_marginTop="3dp"
        android:textSize="10sp"
        android:layout_toRightOf="@+id/iv_calendar"
        android:textColor="#b3b3b6"
        android:layout_below="@+id/tv_date"

        android:layout_marginStart="14dp"
        />

    <RelativeLayout
        android:layout_width="24dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/rl_bg_heart"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="13dp"
        android:layout_marginBottom="9dp"
        android:background="@drawable/bg_icons"
        android:layout_height="24dp">
        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_is_favorite"
            android:fontFamily="@font/sf_medium"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_like"
            android:singleLine="true"
            android:gravity="center"
            android:textColor="@color/black"
            android:textColorHint="#4D000000"
            android:textSize="24sp">

        </ImageView>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="24dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/rl_bg_share"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="9dp"
        android:background="@drawable/bg_icons"
        android:layout_toLeftOf="@+id/rl_bg_heart"

        android:layout_height="24dp">

        <ImageView
            android:id="@+id/tv_case_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_share"

            android:singleLine="true"
            android:gravity="center"
            android:textColor="@color/black"
            android:textColorHint="#4D000000"
            android:textSize="24sp">

        </ImageView>

    </RelativeLayout>



</RelativeLayout>