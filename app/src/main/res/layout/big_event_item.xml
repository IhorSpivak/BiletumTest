<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="237dp"
    android:layout_marginEnd="16dp"

    android:background="@drawable/wallet_item_background"
    android:id="@+id/root"
    android:layout_marginBottom="12dp"
    android:layout_marginStart="16dp">


    <com.joooonho.SelectableRoundedImageView

        android:id="@+id/iv_image_event"
        android:src="@drawable/pictur"
        android:layout_width="match_parent"

        android:layout_height="100dp"
        android:scaleType="centerCrop"

        app:sriv_left_top_corner_radius="13dip"
        app:sriv_right_top_corner_radius="13dip"
        app:sriv_left_bottom_corner_radius="0dip"
        app:sriv_right_bottom_corner_radius="0dip"


        />



    <ImageView
        android:layout_width="wrap_content"
        android:src="@drawable/ic_small_caledar"

        android:layout_below="@+id/ivent_name"
        android:layout_marginTop="7dp"
        android:layout_marginStart="13dp"
        android:id="@+id/iv_calendar"
        android:layout_height="wrap_content">

    </ImageView>

    <ImageView
        android:layout_width="wrap_content"
        android:src="@drawable/ic_small_location"

        android:layout_below="@+id/iv_calendar"
        android:layout_marginStart="13dp"
        android:layout_marginTop="7dp"

        android:id="@+id/iv_small_location"
        android:layout_height="wrap_content">

    </ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Super Music Festival"
        android:fontFamily="@font/sf_medium"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_below="@+id/iv_image_event"
        android:textColor="@color/black"
        android:layout_marginTop="9dp"
        android:layout_marginStart="13dp"
        android:id="@+id/ivent_name"
        android:textSize="14sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="Aug 28 - Sep 22, 202"
        android:fontFamily="sans-serif"

        android:id="@+id/tv_date"
        android:layout_marginTop="3dp"
        android:textSize="10sp"
        android:layout_toRightOf="@+id/iv_calendar"
        android:textColor="#2f73f7"
        android:layout_below="@+id/ivent_name"

        android:layout_marginStart="14dp"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="Amsterdam, Netherlands"
        android:fontFamily="sans-serif"

        android:id="@+id/tv_location"
        android:layout_marginTop="3dp"
        android:textSize="10sp"
        android:layout_toRightOf="@+id/iv_calendar"
        android:textColor="#b3b3b6"
        android:layout_below="@+id/tv_date"

        android:layout_marginStart="14dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_alignParentEnd="true"
        android:background="#ede9e9"
        android:layout_above="@+id/ll_bottom"
        android:layout_marginStart="13dp"
        android:layout_marginEnd="13dp"
        android:layout_height="1dp">

    </View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:id="@+id/ll_bottom"
        android:padding="1dp"
        android:layout_height="50dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:background="@drawable/riple"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/ic_info"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content">

            </ImageView>

            <View
                android:layout_width="1dp"
                android:layout_alignParentEnd="true"
                android:background="#ede9e9"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_height="match_parent">

            </View>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_weight="1"

            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:clickable="true"
                android:background="@drawable/riple"
                android:layout_height="match_parent">


            <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/ic_tickets"
                android:id="@+id/iv_ticket"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content">

            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_centerInParent="true"
                android:text="12"
                android:textSize="12sp"
                android:layout_marginStart="9dp"
                android:textColor="@color/black"
                android:id="@+id/tickets"
                android:layout_height="wrap_content">

            </TextView>
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_alignParentEnd="true"
                android:background="#ede9e9"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_height="match_parent">

            </View>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_weight="1"

            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:clickable="true"
                android:background="@drawable/riple"
                android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/ic_people"
                android:id="@+id/iv_people"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content">

            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_centerInParent="true"
                android:text="12"
                android:textSize="12sp"
                android:layout_marginStart="9dp"
                android:id="@+id/tv_contacts"
                android:textColor="@color/black"
                android:layout_toRightOf="@+id/iv_people"
                android:layout_height="wrap_content">

            </TextView>
            </LinearLayout>
            <View
                android:layout_width="1dp"
                android:layout_alignParentEnd="true"
                android:background="#ede9e9"
                android:layout_marginTop="10dp"
                android:layout_marginBottom ="10dp"
                android:layout_height="match_parent">

            </View>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_weight="1"


            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:clickable="true"
                android:background="@drawable/riple"
                android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/ic_flag"
                android:id="@+id/iv_flags"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content">

            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_centerInParent="true"
                android:text="12"
                android:textSize="12sp"
                android:layout_marginStart="9dp"
                android:textColor="@color/black"
                android:id="@+id/tv_notes"
                android:layout_toRightOf="@+id/iv_flags"
                android:layout_height="wrap_content">

            </TextView>
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>


    <RelativeLayout
        android:layout_width="24dp"
        android:layout_above="@id/ll_bottom"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:id="@+id/rl_bg_share"
        android:background="@drawable/bg_icons"
        android:layout_toLeftOf="@+id/rl_bg_heart"

        android:layout_height="24dp">

        <ImageView
            android:id="@+id/tv_case_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_share"

            android:singleLine="true"
            android:gravity="center"
            android:textColor="@color/black"
            android:textColorHint="#4D000000"
            android:textSize="24sp">

        </ImageView>

    </RelativeLayout>



</RelativeLayout>