<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"

    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:id="@+id/card_first"
        android:elevation="16dp"
        app:cardElevation="16dp"

        android:layout_centerInParent="true"
        app:cardCornerRadius="24dp"
        android:background="@drawable/bg_first_card_auth"
        android:layout_height="480dp">

        <RelativeLayout
            android:layout_width="match_parent"

            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"

            android:layout_height="match_parent">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="45sp"
                android:layout_marginTop="40dp"
                android:layout_alignParentTop="true"
                android:fontFamily="@font/sauber"
                android:text="SIGN UP"
                android:letterSpacing= "-0.05"
                android:id="@+id/title"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="67dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18dp"
                android:layout_below="@+id/title"
                android:fontFamily="@font/sf_medium"
                android:id="@+id/description"
                android:text="Please enter your phone number"
                android:textColor="@color/black">

            </TextView>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:id="@+id/name_text_input"
                android:layout_marginBottom="58dp"

                android:background="@drawable/backgraund_phone_field"
                android:layout_below="@+id/description"

                >

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:id="@+id/ed_phone"

                    android:hint="UA (+380)Your number"
                    android:fontFamily="@font/sf_medium"
                    android:textColor="@color/black"
                    android:textColorHint="#4D000000"
                    android:textSize="15sp"
                    android:layout_marginStart="16dp"
                    android:singleLine="true"
                    >

                </EditText>

                <ImageView
                    android:layout_width="wrap_content"
                    android:src="@drawable/ic_path"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="29dp"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content">

                </ImageView>


            </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"

        android:text="Login"
        android:background="@drawable/gradient_auth_card"

        android:id="@+id/btn_login"
        android:layout_below="@+id/name_text_input">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:fontFamily="@font/sf_heavy"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                android:text="Send"/>
        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/ic_shape"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="29dp"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content">

        </ImageView>

    </RelativeLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Потвердить"
            android:id="@+id/btn_confirm"
            android:visibility="gone"
            android:layout_below="@+id/name_text_input"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="67dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:id="@+id/description2"
                android:alpha="0.4"
                android:fontFamily="@font/sf_medium"
                android:text="An access code will be sent\n to you by SMS"
                android:textColor="#1E1E20">

            </TextView>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:id="@+id/card_confirm"
        android:elevation="16dp"
        android:visibility="gone"
        app:cardElevation="16dp"


        android:layout_centerInParent="true"
        app:cardCornerRadius="24dp"
        android:background="@drawable/bg_first_card_auth"
        android:layout_height="480dp">

        <RelativeLayout
            android:layout_width="match_parent"

            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"

            android:layout_height="match_parent">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="38sp"
                android:layout_marginTop="40dp"
                android:layout_alignParentTop="true"
                android:text="VERIFICATION"
                android:id="@+id/title_confirm"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="31dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18dp"
                android:layout_below="@+id/title_confirm"
                android:id="@+id/description_confirm"
                android:textSize="15sp"
                android:text="An activation code has been sent to your phone. Input it below"
                android:textColor="@color/black">

            </TextView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:id="@+id/name_text_input_confirm"
                android:layout_marginBottom="31dp"


                android:layout_below="@+id/description_confirm"

                >

                <TextView
                    android:layout_width="53dp"
                    android:layout_height="53dp"
                    android:id="@+id/tv_case_1"
                    android:background="@drawable/backgraund_phone_field"

                    android:textColor="@color/black"
                    android:textColorHint="#4D000000"
                    android:textSize="15sp"

                    android:singleLine="true"
                    >

                </TextView>

                <TextView
                    android:layout_width="53dp"
                    android:layout_height="53dp"
                    android:id="@+id/tv_case_2"
                    android:background="@drawable/backgraund_phone_field"

                    android:textColor="@color/black"
                    android:textColorHint="#4D000000"
                    android:textSize="15sp"
                    android:layout_marginStart="20dp"
                    android:singleLine="true"
                    >

                </TextView>

                <TextView
                    android:id="@+id/tv_case_3"
                    android:layout_width="50dp"
                    android:layout_height="53dp"
                    android:layout_marginStart="20dp"

                    android:background="@drawable/backgraund_phone_field"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="#4D000000"
                    android:textSize="15sp">

                </TextView>

                <TextView
                    android:id="@+id/tv_case_4"
                    android:layout_width="46dp"
                    android:layout_height="53dp"
                    android:layout_marginStart="20dp"

                    android:background="@drawable/backgraund_phone_field"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="#4D000000"
                    android:textSize="15sp">

                </TextView>


            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:id="@+id/rl_check_box"
                android:layout_marginBottom="27dp"
                android:layout_below="@+id/name_text_input_confirm"
                >

                <CheckBox
                    android:layout_width="wrap_content"
                    android:id="@+id/cb"
                    android:theme="@style/MyCheckBox"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_privaty_policy"
                    android:hint="I have read and agree to the Privacy policy"
                    android:textColor="#6C6F73"
                    android:textSize="12sp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp"
                    android:layout_toRightOf="@+id/cb"
                    android:singleLine="true"
                    >

                </TextView>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"

                android:background="@drawable/gradient_auth_card"

                android:id="@+id/btn_login_confirm"
                android:layout_below="@+id/rl_check_box">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_centerVertical="true"
                    android:text="Confirm"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:src="@drawable/ic_shape"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="29dp"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content">

                </ImageView>

            </RelativeLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Потвердить"
                android:id="@+id/btn_confirm_confirm"
                android:visibility="gone"
                android:layout_below="@+id/name_text_input_confirm"/>



        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>
</RelativeLayout>