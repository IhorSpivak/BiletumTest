<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nestedScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
    >

<androidx.coordinatorlayout.widget.CoordinatorLayout

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#F2F2F2"
    android:layout_height="match_parent">

<LinearLayout
    android:orientation="vertical" android:layout_width="match_parent"

    android:background="@color/white"

    android:layout_height="match_parent">



    <com.google.android.material.textfield.TextInputLayout

        android:layout_centerInParent="true"
        android:id="@+id/name_text_input"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@drawable/bg_input"
        android:paddingBottom="10dp"
        android:layout_marginTop="20dp"

        >

        <com.google.android.material.textfield.TextInputEditText

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/ed_name"

            android:background="@android:color/transparent"
            android:paddingLeft="10dp"
            android:textColor="@color/black"
            android:fontFamily="@font/sf_medium"
            android:hint="Event name"
            android:textSize="14sp"
            android:singleLine="true" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout

        android:layout_centerInParent="true"

        android:id="@+id/name_start_date_input"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@drawable/bg_input"
        android:paddingBottom="10dp"
        android:layout_marginTop="20dp"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ed_start_day"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:singleLine="true"
            android:background="@null"
            android:paddingLeft="10dp"
            android:fontFamily="@font/sf_medium"
            android:textSize="14sp"
            android:hint="Start date" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout

        android:layout_centerInParent="true"
        android:id="@+id/end_date_input"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@drawable/bg_input"

        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ed_end_date"
            android:layout_width="match_parent"
            android:singleLine="true"
            android:layout_height="match_parent"
            android:background="@null"
            android:paddingLeft="10dp"
            android:fontFamily="@font/sf_medium"
            android:textSize="14sp"


            android:hint="End date" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout


        android:id="@+id/name_type_input"
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_height="52dp"
        android:background="@drawable/bg_input"
        android:layout_marginTop="16dp"

        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ed_type"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="10dp"
            android:drawableEnd="@drawable/ic_arrow_rigth"
            android:paddingEnd="20dp"
            android:background="@null"
            android:textColor="@color/black"
            android:paddingLeft="10dp"
            android:fontFamily="@font/sf_medium"

            android:textSize="14sp"
            android:singleLine="true"
            android:hint="Event type" />
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout

        android:layout_centerInParent="true"
        android:id="@+id/name_phone_input1"

        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_height="52dp"
        android:background="@drawable/bg_input"

        android:layout_marginTop="16dp"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ed_event_category"
            android:layout_width="match_parent"
            android:drawableEnd="@drawable/ic_arrow_rigth"
            android:singleLine="true"
            android:paddingEnd="20dp"
            android:textColor="@color/black"
            android:background="@null"
            android:paddingLeft="10dp"
            android:paddingBottom="10dp"
            android:fontFamily="@font/sf_medium"
            android:textSize="14sp"
            android:layout_height="match_parent"
            android:hint="Event category" />
    </com.google.android.material.textfield.TextInputLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">


    <com.google.android.material.textfield.TextInputLayout

        android:paddingTop="10dp"
        android:layout_height="52dp"
        android:background="@drawable/bg_input"
        android:layout_weight="1"
        android:id="@+id/chose_country_input"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:paddingBottom="20dp"
        android:layout_width="match_parent"
        android:layout_marginTop="16dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ed_country"
            android:layout_width="match_parent"
            android:background="@null"
            android:paddingLeft="10dp"
            android:fontFamily="@font/sf_medium"
            android:paddingEnd="20dp"
            android:textColor="@color/black"

            android:drawableEnd="@drawable/ic_arrow_rigth"
            android:textSize="14sp"
            android:layout_height="match_parent"
            android:hint="Country"
            android:singleLine="true" />
    </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout

            android:layout_centerInParent="true"
            android:id="@+id/chose_city_input"
            android:layout_weight="1"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"


            android:layout_marginTop="16dp"
            android:paddingTop="10dp"
            android:paddingBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="@drawable/bg_input"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ed_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:paddingLeft="10dp"
                android:fontFamily="@font/sf_medium"
                android:textColor="@color/black"
                android:drawableEnd="@drawable/ic_arrow_rigth"
                android:textSize="14sp"
                android:paddingEnd="20dp"
                android:hint="City" />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout

        android:layout_centerInParent="true"
        android:id="@+id/address_input"
        android:layout_marginTop="16dp"
        android:singleLine="true"
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginEnd="20dp"
        android:paddingBottom="10dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/bg_input"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ed_address"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:background="@null"
            android:paddingLeft="10dp"
            android:paddingBottom="10dp"
            android:fontFamily="@font/sf_medium"
            android:textSize="14sp"
            android:hint="Address" />
    </com.google.android.material.textfield.TextInputLayout>



    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ð¡ontinue"
        android:layout_marginTop="16dp"
        android:textColor="#3AA1FF"
        android:textAllCaps="false"
        android:fontFamily="@font/sf_medium"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        android:textSize="17sp"
        android:stateListAnimator="@null"
        android:background="@drawable/bg_button_next"
        android:layout_centerInParent="true"
        android:id="@+id/btn_go_to_step_2"
        android:layout_below="@+id/name_text_input"/>



</LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>

</androidx.core.widget.NestedScrollView>