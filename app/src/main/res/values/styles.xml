<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#A358D7</item>
        <item name="colorPrimaryDark">#A358D7</item>
        <item name="colorAccent">#A358D7</item>
    </style>

    <style name="MyCheckBox" parent="AppTheme">
        <item name="colorAccent">@color/colorAccent</item>  // for checked
        <item name="android:textColorSecondary">#F1EFF7</item>  // for unchecked
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyTabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>
